{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "errors": {
            "type" : "array",
            "items": {
                "type": "object",
                "properties" : {
                    "errorCode" : {
                        "type": "string"
                    }, 
                    "context" : {
                        "type": "object"
                    },
                    "link" : {
                        "type": "string"
                    }, 
                    "errorMessage" : {
                        "type": "string"
                    }
                },
                "required": ["errorCode", "errorMessage"]
            },
            "minItems" : 1
        }
    }
}